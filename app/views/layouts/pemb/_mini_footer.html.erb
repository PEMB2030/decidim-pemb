<div class="footer-transition"></div>
<div class="mini-footer">
  <div class="row">
    <div class="medium-4 large-2 large-offset-3 column">
      <a rel="pemb"
         href="http://pemb.cat"
         target="_blank" rel="noopener">
         <%= image_tag("pemb/marca_PEMB.svg", alt: "PEMB (Pla Estratègic Metropolità de Barcelona)") %>
      </a>
    </div>
    <div class="medium-4 large-2 column">
      <div class="barcelonadema-logo">
      <% if current_organization.official_img_footer? %>
        <div class="barcelonadema-logo">
          <%= link_to current_organization.official_url do %>
            <%= image_tag current_organization.official_img_footer.url.to_s , alt: current_organization.name %>
          <% end %>
        </div>
        <% else %>
          <a rel="Barcelona Demà"
            href="https://pemb.cat/ca/barcelona-dema/"
            target="_blank" rel="noopener">
            <%= image_tag asset_path("pemb/Bdema_logo_Blanc.svg") %>
          </a>
        <% end %>
      </div>
    </div>
    <div class="medium-4 large-2 column end footer-logos">
      <div class="amb-logo">
        <a rel="amb"
           href="https://amb.cat/"
           target="_blank">
          <%= image_tag("pemb/logo-a-m-b.svg", alt: "AMB (Area Metropolitana de Barcelona)" ) %>
        </a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="medium-6 large-6 column">
      <a rel="license" class="cc-badge"
        href="http://creativecommons.org/licenses/by-sa/4.0/"
        target="_blank" rel="noopener">
        <%= image_tag("decidim/cc-badge.png", alt: "Creative Commons License") %>
      </a>
      <%= t("layouts.decidim.footer.made_with_open_source").html_safe %>
    </div>
    <div class="medium-6 large-6 column footer-logos">
      <div class="decidim-logo">
        <a rel="decidim"
          href="https://decidim.org/"
          target="_blank">
          <%= image_tag("decidim/decidim-logo.svg", alt: "Decidim Logo" ) %>
        </a>
      </div>
    </div>
  </div>
</div>

<div class="footer-transition"></div>
<div class="mini-footer">
  <div class="custom-logos">
    <a rel="Barcelona Demà"
      href="https://pemb.cat/ca/barcelona-dema/"
      target="_blank" rel="noopener">
      <%= image_tag asset_path("pemb/logo_bd.png") %>
    </a>
    <a rel="pemb"
        href="https://pemb.cat"
        target="_blank" rel="noopener">
        <%= image_tag("pemb/logo_pemb.png", alt: "PEMB (Pla Estratègic Metropolità de Barcelona)") %>
    </a>
    <a rel="amb"
        href="https://amb.cat/"
        target="_blank">
      <%= image_tag("pemb/logo_amb.png", alt: "AMB (Area Metropolitana de Barcelona)" ) %>
    </a>
    <a rel="diba"
        href="https://www.diba.cat/"
        target="_blank">
      <%= image_tag("pemb/logo_diba.png", alt: "Diputació de Barcelona" ) %>
    </a>
  </div>

 <div class="row">
  <div class="medium-7 large-8 column">
    <a rel="license noopener" class="cc-badge"
        href="http://creativecommons.org/licenses/by-sa/4.0/"
        target="_blank">
      <%= image_tag("decidim/cc-badge.png", alt: t("layouts.decidim.footer.cc_by_license")) %>
    </a>
    <%= t("layouts.decidim.footer.made_with_open_source").html_safe %>
  </div>
  <div class="medium-5 large-4 column logos">
    <div class="decidim-logo platoniq-logo">
      <a rel="decidim noopener"
          href="http://platoniq.net/"
          target="_blank"
          title="<%= t("platoniq.footer.logo") %>">
        <span class="platoniq-text show-for-medium"><%= t("platoniq.footer.text") %></span>
        <%= image_tag("platoniq/platoniq-logo.svg", alt: t("platoniq.footer.logo")) %>
      </a>
    </div>
    <div class="decidim-logo">
      <a rel="decidim noopener"
          href="https://decidim.org/"
          target="_blank">
        <%= image_tag("decidim/decidim-logo.svg", alt: t("layouts.decidim.footer.decidim_logo")) %>
      </a>
    </div>
  </div>
</div>
